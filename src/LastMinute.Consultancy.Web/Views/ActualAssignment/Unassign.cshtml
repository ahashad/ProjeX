@model LastMinute.Consultancy.Application.ActualAssignment.Commands.UnassignActualAssignmentCommand
@using LastMinute.Consultancy.Application.ActualAssignment
@{
    ViewData["Title"] = "Unassign Assignment";
    var assignment = ViewBag.Assignment as ActualAssignmentDto;
}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-warning">
                    <h5 class="mb-0"><i class="fas fa-user-slash me-2"></i>Unassign Employee</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Unassign" method="post">
                        <input asp-for="AssignmentId" type="hidden" />
                        <div class="mb-3">
                            <label class="form-label">Employee</label>
                            <p class="form-control-plaintext">@assignment?.EmployeeName</p>
                        </div>
                        <div class="mb-3">
                            <label asp-for="EndDate" class="form-label">End Date</label>
                            <input asp-for="EndDate" class="form-control" type="date" />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-warning">Unassign</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
