@model List<LastMinute.Consultancy.Application.Client.ClientDto>

@{
    ViewData["Title"] = "Clients";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>@ViewData["Title"]</h2>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add New Client
                </a>
            </div>

            @if (Model.Any())
            {
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Company</th>
                                        <th>Contact Person</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Status</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var client in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@client.ClientName</strong>
                                                @if (!string.IsNullOrEmpty(client.Address))
                                                {
                                                    <br />
                                                    <small class="text-muted">@client.Address</small>
                                                }
                                            </td>
                                            <td>@client.ContactPerson</td>
                                            <td>@client.Email</td>
                                            <td>@client.Phone</td>
                                            <td>
                                                @switch (client.Status)
                                                {
                                                    case LastMinute.Consultancy.Domain.Enums.ClientStatus.Active:
                                                        <span class="badge bg-success">Active</span>
                                                        break;
                                                    case LastMinute.Consultancy.Domain.Enums.ClientStatus.Inactive:
                                                        <span class="badge bg-secondary">Inactive</span>
                                                        break;
                                                    case LastMinute.Consultancy.Domain.Enums.ClientStatus.OnHold:
                                                        <span class="badge bg-warning">On Hold</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-light text-dark">@client.Status</span>
                                                        break;
                                                }
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@client.Id" 
                                                       class="btn btn-sm btn-outline-info" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@client.Id" 
                                                       class="btn btn-sm btn-outline-warning" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@client.Id" 
                                                       class="btn btn-sm btn-outline-danger" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <h4>No clients found</h4>
                    <p>Get started by adding your first client.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Add First Client
                    </a>
                </div>
            }
        </div>
    </div>
</div>

