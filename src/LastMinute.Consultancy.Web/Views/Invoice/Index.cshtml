@model IEnumerable<LastMinute.Consultancy.Application.Invoice.InvoiceDto>

@{
    ViewData["Title"] = "Invoices";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-file-invoice me-2"></i>Invoices
                        </h4>
                        <div class="btn-group">
                            <a asp-action="Create" class="btn btn-light">
                                <i class="fas fa-plus me-2"></i>Create Invoice
                            </a>
                            <a asp-action="GenerateFromTimeEntries" class="btn btn-outline-light">
                                <i class="fas fa-clock me-2"></i>Generate from Time
                            </a>
                            <a asp-action="Overdue" class="btn btn-warning">
                                <i class="fas fa-exclamation-triangle me-2"></i>Overdue
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- Filters -->
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <form method="get" class="row g-3 align-items-end">
                                <div class="col-md-3">
                                    <label class="form-label">Project</label>
                                    <select name="projectId" class="form-select" asp-items="ViewBag.FilterProjectId">
                                        <option value="">All Projects</option>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Client</label>
                                    <select name="clientId" class="form-select" asp-items="ViewBag.FilterClientId">
                                        <option value="">All Clients</option>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Status</label>
                                    <select name="status" class="form-select" asp-items="ViewBag.FilterStatuses">
                                        <option value="">All Statuses</option>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-filter me-2"></i>Filter
                                    </button>
                                    <a asp-action="Index" class="btn btn-outline-secondary">
                                        <i class="fas fa-undo me-2"></i>Clear
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>

                    @if (Model.Any())
                    {
                        <!-- Summary Cards -->
                        <div class="row mb-4">
                            <div class="col-md-3">
                                <div class="card bg-primary text-white">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">Total Invoices</h5>
                                        <h3>@Model.Count()</h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-success text-white">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">Total Value</h5>
                                        <h3>$@Model.Sum(i => i.TotalAmount).ToString("N0")</h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-warning text-white">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">Pending</h5>
                                        <h3>@Model.Count(i => i.Status == "Planned" || i.Status == "Draft" || i.Status == "Issued" || i.Status == "Sent")</h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-danger text-white">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">Overdue</h5>
                                        <h3>@Model.Count(i => i.Status == "Overdue")</h3>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Invoice #</th>
                                        <th>Project</th>
                                        <th>Client</th>
                                        <th>Date</th>
                                        <th>Due Date</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var invoice in Model)
                                    {
                                        <tr class="@(invoice.Status == "Overdue" ? "table-danger" : "")">
                                            <td>
                                                <strong>@invoice.InvoiceNumber</strong>
                                            </td>
                                            <td>@invoice.ProjectName</td>
                                            <td>@invoice.ClientName</td>
                                            <td>@invoice.InvoiceDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                @invoice.DueDate.ToString("MMM dd, yyyy")
                                                @if (invoice.DueDate < DateTime.Today && invoice.Status != "Paid" && invoice.Status != "Cancelled")
                                                {
                                                    <span class="badge bg-danger ms-2">
                                                        @((DateTime.Today - invoice.DueDate).Days) days overdue
                                                    </span>
                                                }
                                            </td>
                                            <td class="text-end">
                                                <strong>$@invoice.TotalAmount.ToString("N2")</strong>
                                            </td>
                                            <td>
                                                @{
                                                    var badgeClass = invoice.Status switch
                                                    {
                                                        "Planned" => "bg-secondary",
                                                        "Draft" => "bg-info",
                                                        "Issued" => "bg-primary",
                                                        "Sent" => "bg-warning",
                                                        "Paid" => "bg-success",
                                                        "PartiallyPaid" => "bg-warning",
                                                        "Overdue" => "bg-danger",
                                                        "Cancelled" => "bg-dark",
                                                        _ => "bg-secondary"
                                                    };
                                                }
                                                <span class="badge @badgeClass">@invoice.Status</span>
                                            </td>
                                            <td>
                                                <div class="dropdown">
                                                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                        Actions
                                                    </button>
                                                    <div class="dropdown-menu">
                                                        <a class="dropdown-item" asp-action="Details" asp-route-id="@invoice.Id">
                                                            <i class="fas fa-eye"></i> View Details
                                                        </a>
                                                        @if (invoice.Status == "Planned" || invoice.Status == "Draft")
                                                        {
                                                            <a class="dropdown-item" asp-action="Edit" asp-route-id="@invoice.Id">
                                                                <i class="fas fa-edit"></i> Edit
                                                            </a>
                                                            <div class="dropdown-divider"></div>
                                                            <form asp-action="Confirm" asp-route-id="@invoice.Id" method="post" class="d-inline">
                                                                @Html.AntiForgeryToken()
                                                                <input type="hidden" name="confirmationNotes" value="Confirmed from invoice list" />
                                                                <button type="submit" class="dropdown-item text-success" onclick="return confirm('Confirm and issue this invoice?')">
                                                                    <i class="fas fa-check"></i> Confirm & Issue
                                                                </button>
                                                            </form>
                                                        }
                                                        @if (invoice.Status == "Issued")
                                                        {
                                                            <form asp-action="MarkAsSent" asp-route-id="@invoice.Id" method="post" class="d-inline">
                                                                @Html.AntiForgeryToken()
                                                                <button type="submit" class="dropdown-item text-info">
                                                                    <i class="fas fa-paper-plane"></i> Mark as Sent
                                                                </button>
                                                            </form>
                                                        }
                                                        @if (invoice.Status != "Paid" && invoice.Status != "Cancelled")
                                                        {
                                                            <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#paymentModal-@invoice.Id">
                                                                <i class="fas fa-dollar-sign"></i> Record Payment
                                                            </a>
                                                        }
                                                        @if (invoice.Status != "Paid" && invoice.Status != "Cancelled")
                                                        {
                                                            <div class="dropdown-divider"></div>
                                                            <a class="dropdown-item text-danger" href="#" data-bs-toggle="modal" data-bs-target="#cancelModal-@invoice.Id">
                                                                <i class="fas fa-times"></i> Cancel
                                                            </a>
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-file-invoice fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No invoices found</h5>
                            <p class="text-muted">Start by creating your first invoice or generating one from time entries.</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Create Invoice
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Payment Modals -->
@foreach (var invoice in Model.Where(i => i.Status != "Paid" && i.Status != "Cancelled"))
{
    <div class="modal fade" id="paymentModal-@invoice.Id" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-action="MarkAsPaid" asp-route-id="@invoice.Id" method="post">
                    @Html.AntiForgeryToken()
                    <div class="modal-header">
                        <h5 class="modal-title">Record Payment - @invoice.InvoiceNumber</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Payment Amount</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input type="number" name="amount" class="form-control" 
                                       step="0.01" max="@invoice.TotalAmount" value="@invoice.TotalAmount" required />
                            </div>
                            <div class="form-text">Invoice total: $@invoice.TotalAmount.ToString("N2")</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Payment Reference</label>
                            <input type="text" name="paymentReference" class="form-control" 
                                   placeholder="Check number, transaction ID, etc." />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-success">Record Payment</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

<!-- Cancel Modals -->
@foreach (var invoice in Model.Where(i => i.Status != "Paid" && i.Status != "Cancelled"))
{
    <div class="modal fade" id="cancelModal-@invoice.Id" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-action="Cancel" asp-route-id="@invoice.Id" method="post">
                    @Html.AntiForgeryToken()
                    <div class="modal-header">
                        <h5 class="modal-title">Cancel Invoice - @invoice.InvoiceNumber</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Are you sure you want to cancel this invoice? This action cannot be undone.
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Cancellation Reason</label>
                            <textarea name="cancellationReason" class="form-control" rows="3" 
                                      placeholder="Please provide a reason for cancellation..."></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Keep Invoice</button>
                        <button type="submit" class="btn btn-danger">Cancel Invoice</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        // Auto-submit filter form when dropdowns change
        $('select[name="projectId"], select[name="clientId"], select[name="status"]').change(function() {
            $(this).closest('form').submit();
        });
    </script>
}