@model IEnumerable<LastMinute.Consultancy.Application.Overhead.OverheadDto>

@{
    ViewData["Title"] = "Overhead Expenses";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">
                    <i class="fas fa-dollar-sign me-2"></i>Overhead Expenses
                </h2>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Add New Expense
                </a>
            </div>

            @if (Model.Any())
            {
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Description</th>
                                        <th>Project</th>
                                        <th>Category</th>
                                        <th>Amount</th>
                                        <th>Date</th>
                                        <th>Created</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var overhead in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@overhead.Description</strong>
                                            </td>
                                            <td>@overhead.ProjectName</td>
                                            <td>
                                                @{
                                                    var categoryClass = overhead.Category switch
                                                    {
                                                        LastMinute.Consultancy.Domain.Enums.OverheadCategory.Travel => "badge bg-primary",
                                                        LastMinute.Consultancy.Domain.Enums.OverheadCategory.Accommodation => "badge bg-success",
                                                        LastMinute.Consultancy.Domain.Enums.OverheadCategory.Meals => "badge bg-warning",
                                                        LastMinute.Consultancy.Domain.Enums.OverheadCategory.Software => "badge bg-info",
                                                        LastMinute.Consultancy.Domain.Enums.OverheadCategory.Hardware => "badge bg-dark",
                                                        LastMinute.Consultancy.Domain.Enums.OverheadCategory.Miscellaneous => "badge bg-secondary",
                                                        _ => "badge bg-secondary"
                                                    };
                                                }
                                                <span class="@categoryClass">@overhead.Category</span>
                                            </td>
                                            <td>
                                                <strong>@overhead.Amount.ToString("C")</strong>
                                            </td>
                                            <td>
                                                @overhead.Date.ToString("MMM dd, yyyy")
                                            </td>
                                            <td>
                                                @overhead.CreatedAt.ToString("MMM dd, yyyy")
                                                <br />
                                                <small class="text-muted">by @overhead.CreatedBy</small>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@overhead.Id" 
                                                       class="btn btn-sm btn-outline-info" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@overhead.Id" 
                                                       class="btn btn-sm btn-outline-warning" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@overhead.Id" 
                                                       class="btn btn-sm btn-outline-danger" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="table-light">
                                    <tr>
                                        <td colspan="3"><strong>Total Overhead Expenses:</strong></td>
                                        <td><strong>@Model.Sum(o => o.Amount).ToString("C")</strong></td>
                                        <td colspan="3"></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-dollar-sign fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No overhead expenses found</h5>
                    <p class="text-muted">Start by adding your first overhead expense.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Add First Expense
                    </a>
                </div>
            }
        </div>
    </div>
</div>