@model List<LastMinute.Consultancy.Application.RolesCatalog.RolesCatalogDto>

@{
    ViewData["Title"] = "Roles Catalog";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>@ViewData["Title"]</h2>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add New Role
                </a>
            </div>

            @if (Model.Any())
            {
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Role Name</th>
                                        <th>Notes</th>
                                        <th>Created</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var role in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@role.RoleName</strong>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(role.Notes))
                                                {
                                                    @(role.Notes.Length > 100 ? role.Notes.Substring(0, 100) + "..." : role.Notes)
                                                }
                                                else
                                                {
                                                    <em class="text-muted">No notes</em>
                                                }
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @role.CreatedAt.ToString("MMM dd, yyyy")
                                                    <br />
                                                    by @role.CreatedBy
                                                </small>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@role.Id" 
                                                       class="btn btn-sm btn-outline-info" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@role.Id" 
                                                       class="btn btn-sm btn-outline-warning" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@role.Id" 
                                                       class="btn btn-sm btn-outline-danger" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <h4>No roles found</h4>
                    <p>Get started by creating your first role.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create First Role
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
}

