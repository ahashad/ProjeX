@page "/assignments"
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

<PageTitle>Assignments - ProjeX</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Assignments</h1>
    <AuthorizeView Policy="ManagerOrAdmin">
        <a href="/assignments/create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>New Assignment
        </a>
    </AuthorizeView>
</div>

<div class="card">
    <div class="card-body">
        <p class="text-muted">Assignment management functionality will be implemented here.</p>
        <p>This page will show employee assignments to projects and roles.</p>
    </div>
</div>

