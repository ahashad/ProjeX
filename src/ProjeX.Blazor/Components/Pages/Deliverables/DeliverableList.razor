@page "/deliverables"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

<PageTitle>Deliverables - ProjeX</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Deliverables</h1>
    <AuthorizeView Policy="ManagerOrAdmin">
        <a href="/deliverables/create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>New Deliverable
        </a>
    </AuthorizeView>
</div>

<div class="card">
    <div class="card-body">
        <p class="text-muted">Deliverable management functionality will be implemented here.</p>
        <p>This page will show project deliverables with status tracking and management capabilities.</p>
    </div>
</div>

