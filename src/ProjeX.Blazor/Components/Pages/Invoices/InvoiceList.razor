@page "/invoices"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Policy = "ManagerOrAdmin")]

<PageTitle>Invoices - ProjeX</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Invoices</h1>
    <div class="btn-group">
        <a href="/invoices/create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Create Invoice
        </a>
        <a href="/invoices/generate" class="btn btn-success">
            <i class="fas fa-magic me-2"></i>Generate from Time
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <h4>Total Invoices</h4>
                <h2>0</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <h4>Paid</h4>
                <h2>$0</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <h4>Pending</h4>
                <h2>$0</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-danger text-white">
            <div class="card-body">
                <h4>Overdue</h4>
                <h2>$0</h2>
            </div>
        </div>
    </div>
</div>

<div class="card mt-4">
    <div class="card-body">
        <p class="text-muted">Invoice management functionality will be implemented here.</p>
        <p>This page will show all invoices with filtering, search, and management capabilities.</p>
    </div>
</div>

