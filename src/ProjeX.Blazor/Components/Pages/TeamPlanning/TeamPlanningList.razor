@page "/team-planning"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

<PageTitle>Team Planning - ProjeX</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Team Planning</h1>
    <AuthorizeView Policy="ManagerOrAdmin">
        <a href="/team-planning/create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>New Planning Slot
        </a>
    </AuthorizeView>
</div>

<div class="card">
    <div class="card-body">
        <p class="text-muted">Team planning functionality will be implemented here.</p>
        <p>This page will show planned team slots and resource allocation for projects.</p>
    </div>
</div>

